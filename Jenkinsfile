pipeline {
    agent any

    stages {
        stage('STAGING') {
            steps {
                echo 'Hello World'
            }
        }
        
        stage('PRE-PROD') {
            steps {
                echo 'Hello World'
            }
        }
        
        stage('PRODUCTION') {
            steps {
                echo 'Hello World'
            }
        }
    }
}
